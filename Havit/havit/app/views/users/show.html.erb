

<div class="form-group">

<h3>Your Profile</h3>
  <strong>Name:</strong>
  <%= @user.full_name %>
</div>

<div class="form-group">
  <strong>Email:</strong>
  <%= @user.email %>
</div>

<div class="form-group">
  <strong>Postcode:</strong>
  <%= @user.postcode %>
</div>

<div class="form-group">
  <strong>City:</strong>
  <%= @user.city %>
</div>

<div class="form-group">
  <strong>Rating:</strong>
  <%= @user.rating %>
</div>

<div class="form-group">
<h3>Your Posted Items</h3>
<% @user.items.each do |item| %>
  <p><%= item.title %></p>
  <% if item.requests.length > 0 %>
    <% item.requests.each do |request| %>
      <p>Item requested by <%= item.user.full_name %><p>
      <%= link_to 'Accept', request_path(request, { request: { accepted: true } }), method: :patch %>
      <%= link_to 'Decline', request_path(request, { request: { accepted: false } }), method: :patch %>
    <% end %>
  <% end %>
<% end %>

<h3>Requests for Your Items</h3>
<% @user.requests.each do |request| %>
  <%= request.item.title %>
  <% if request.accepted %>
    Request accepted by <%= request.item.user.full_name %>, please contact on <%= request.item.user.phone_number %>
  <% end %>
<% end %>
<br>
<%= link_to 'Edit', edit_user_registration_path %>
</div>